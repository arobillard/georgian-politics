---
layout: content
title: Quest List
img: /images/banner-home.jpg
permalink: /quests/
loopExclude: true
---
<div class="wrapper quest-log pad-b">
  <!-- <h2 class="gutter"></h2> -->
  <div class="grid grid-stretch island-1-2">
    <div class="unit [ xs-1 m-1-2 l-1-3 ] unit-content-distribute island-1-2">
      <div class="card-quest-log content-fill">
        <h3 class="discovered">Discovered</h3>
        <ol id="discovered-list" class="list-group">
          {% for quest in site.quests %}
          {% if quest.status == 'discovered' %}
          <li class="">
            {% include patterns/cards/preview-list-item.liquid img=quest.img url=quest.url title=quest.title %}
          </li>
          {% endif %}
          {% endfor %}
        </ol>
      </div>
    </div>
    <div class="unit [ xs-1 m-1-2 l-1-3 ] unit-content-distribute island-1-2">
      <div class="card-quest-log content-fill">
        <h3 class="active">Active</h3>
        <ol id="discovered-list" class="list-group">
          {% for quest in site.quests %}
          {% if quest.status == 'active' %}
          <li class="">
            {% include patterns/cards/preview-list-item.liquid img=quest.img url=quest.url title=quest.title %}
          </li>
          {% endif %}
          {% endfor %}
        </ol>
      </div>
    </div>
    <div class="unit [ xs-1 m-1-2 l-1-3 ] unit-content-distribute island-1-2">
      <div class="card-quest-log content-fill">
        <h3>Completed</h3>
        <ol id="discovered-list" class="list-group">
          {% for quest in site.quests %}
          {% if quest.status == 'completed' %}
          <li class="">
            {% include patterns/cards/preview-list-item.liquid img=quest.img url=quest.url title=quest.title %}
          </li>
          {% endif %}
          {% endfor %}
        </ol>
      </div>
    </div>
  </div>
</div>
