---
layout: default
---
<header class="page-header pab-t-2 bg-primary">
  <div class="wrapper gutter pad-t-2 pab-b">
    <h1>{{ page.title }}</h1>
  </div>
</header>
<div class="content-grid wrapper">
  <nav class="page-nav island">
    <ol class="list-group">
      {% for link in page.pageNav %}
      <li>
        <a href="#{{ link.url }}">{{ link.text }}</a>
        {% if link.subNav %}
        <ol class="page-nav-sub list-group">
          {% for subLink in link.subNav %}
          <li>
            <a href="#{{ subLink.url }}">{{ subLink.text }}</a>
          </li>
          {% endfor %}
        </ol>
        {% endif %}
      </li>
      {% endfor %}
    </ul>
  </nav>
  <div class="page-content island">
    {{content}}
  </div>

</div>
