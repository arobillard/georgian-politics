---
layout: content
title: Factions
img: /images/banner-home.jpg
permalink: /factions/
loopExclude: true
---
<section>
  <div class="wrapper pad-b pad">
    <div class="grid island-1-2">
      {% for faction in site.factions %}
      {% if faction.loopExclude != true %}
      {% if faction.discovered == true or site.data.view-controls.dm-view == true %}
      <div class="unit [ xs-1 m-1-2 l-1-3 ] island-1-2">
        {% include patterns/cards/preview-list-item.liquid title=faction.title img=faction.symbol url=faction.url %}
      </div>
      {% endif %}
      {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
