---
layout: content
title: Items
img: /images/items/items-page.jpg
permalink: /items/
loopExclude: true
filters:
  - armour
  - clothing
  - headwear
  - potion
  - ring
  - utility
  - weapon
---
<section class="pad-t-2 pad-b-2">
  <div class="wrapper">
    {% comment %}
    <div class="filter island">
      <h3 class="push-0">Filter:</h3>
      <ol class="list-group-inline push-0">
        <li>
          <a class="btn btn-filter btn-thin btn-selected micro" href="#all" data-filter="all">All</a>
        </li>
        {% for filter in page.filters %}
        <li>
          <a class="btn btn-filter btn-thin micro" href="#{{ filter }}" data-filter="{{ filter }}">{{ filter | capitalize }}</a>
        </li>
        {% endfor %}
      </ol>
    </div>
    {% endcomment %}
    <div class="filter island">
      <h3 class="push-0">Filter:</h3>
      <select id="filter" class="filter-select" name="filter">
        <option value="all">All</option>
        {% for filter in page.filters %}
        <option value="{{ filter }}">{{ filter | capitalize | replace: "-", " " }}</option>
        {% endfor %}
      </select>
    </div>
    <ol id="item-list" class="grid grid-stretch filter-grid list-group island-1-2 all">
      {% for item in site.items %}
        {% if item.discovered == true or site.data.view-controls.dm-view == true and item.loopExclude != true %}
          <li class="unit [ xs-1 s-1-2 m-1-3 ] unit-content-distribute island-1-2{{ item.type | prepend: " " }}">
            <a class="card-item-preview{% if item.purchased == true %} purchased{% endif %} island-1-2" href="{{ item.url }}">
              {% if item.img %}
              <div class="img-preview" style="background-image: url('{{site.baseurl}}{{ item.img }}')"></div>
              {% else %}
              <div class="img-preview-placeholder">
                <i class="icon i-1-1-2">
                  <svg><use xlink:href="{{site.baseurl}}/images/icons.svg#chest" /></svg>
                </i>
                <span class="icon-label hidden">Item Chest</span>
              </div>
              {% endif %}
              <p class="push-0">{{ item.title }}</p>
              <div class="icon-wrap">
                <i class="icon i-1">
                  <svg><use xlink:href="{{site.baseurl}}/images/icons.svg#right-indicator" /></svg>
                </i>
                <span class="icon-label hidden">Right indicator</span>
              </div>
            </a>
          </li>
        {% endif %}
      {% endfor %}
    </ol>
  </div>
</section>
