<nav class="{{ include.navClass }}">
  <!-- <a class="temp-tog" href="#">Open Menu</a> -->
  <ol class="list-group push-0">
    <li>
      <a href="{{site.baseurl}}/locations">Locations</a>
      {% unless include.navClass == 'nav-footer' %}
      <div class="dropdown-block">
        <ol class="list-group push-0 dropdown-block-items level-one">
          <li>
            <a class="bold city" href="{{site.baseurl}}/locations/port-george">Port George</a>
            <ol class="list-group milli push-0 dropdown-block-items level-two">
              <li class="push-1-2">
                <a class="block" href="{{site.baseurl}}/locations/port-george/districts/">Districts</a>
                <ol class="list-group push-0 dropdown-block-items level-three">
                  {% for districts in site.locations %}
                    {% if districts.url contains 'districts' %}
                      {% unless districts.title == 'Districts' %}
                        <li>
                          <a href="{{site.baseurl}}{{ districts.url }}">{{ districts.title }}</a>
                        </li>
                      {% endunless %}
                    {% endif %}
                  {% endfor %}
                </ol>
              </li>

              <li>
                <a href="{{site.baseurl}}/locations/port-george/families/">Families</a>
                <ol class="list-group push-0 dropdown-block-items level-three">
                  {% for families in site.locations %}
                    {% if families.discovered == true or site.data.view-controls.player-view == false %}
                    {% if families.url contains 'families' %}
                      {% unless families.title == 'Families' %}
                        <li>
                          <a href="{{site.baseurl}}{{ families.url }}">{{ families.title }}</a>
                        </li>
                      {% endunless %}
                    {% endif %}
                    {% endif %}
                  {% endfor %}
                </ol>
              </li>

            </ol>
          </li>
        </ol>
      </div>
      {% endunless %}
    </li>
    {% if site.data.view-controls.player-view == false %}
    <li>
      <a href="{{site.baseurl}}/events">Events</a>
      {% unless include.navClass == 'nav-footer' %}
      <div class="dropdown-block">
        <ol class="list-group push-0 dropdown-block-items level-one">
          {% for events in site.events %}
            {% unless events.title == 'Events' %}
              <li>
                <a href="{{site.baseurl}}{{ events.url }}">{{ events.title }}</a>
              </li>
            {% endunless %}
          {% endfor %}
        </ol>
      </div>
      {% endunless %}
    </li>
    {% endif %}
    <li>
      <a href="{{site.baseurl}}/factions">Factions</a>
      {% unless include.navClass == 'nav-footer' %}
      <div class="dropdown-block">
        <ol class="list-group push-0 dropdown-block-items level-one">
          {% for factions in site.factions %}
            {% if factions.discovered == true or site.data.view-controls.player-view == false %}
            <li>
              <a href="{{site.baseurl}}{{ factions.url }}">{{ factions.title }}</a>
            </li>
            {% endif %}
          {% endfor %}
        </ol>
      </div>
      {% endunless %}
    </li>
    <li>
      <a href="{{site.baseurl}}/npcs">NPCs</a>
      {% comment %}{% unless include.navClass == 'nav-footer' %}
      <div class="dropdown-block">
        <ol class="list-group push-0 dropdown-block-items level-one">
          {% for npcs in site.npcs %}
            {% if npcs.discovered == true or site.data.view-controls.player-view == false %}
              <li>
                <a href="{{site.baseurl}}{{ npcs.url }}">{{ npcs.title }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ol>
      </div>
      {% endunless %}{% endcomment %}
    </li>
  </ol>
</nav>
