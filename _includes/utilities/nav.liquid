<nav class="{{ include.navClass }}">
  <!-- <a class="temp-tog" href="#">Open Menu</a> -->
  <ol class="list-group push-0">
    <li>
      <a href="/locations">Locations</a>
      {% unless include.navClass == 'nav-footer' %}
      <div class="dropdown-block">
        <ol class="list-group push-0 dropdown-block-items level-one">
          <li>
            <a href="/locations/port-george">Port George</a>
            <ol class="list-group push-0 dropdown-block-items level-two">
              <li class="push-1-2">
                <a class="block" href="/locations/port-george/districts/">Districts</a>
                <ol class="list-group push-0 dropdown-block-items level-three">
                  {% for districts in site.locations %}
                  {% if districts.url contains 'districts' %}
                  {% unless districts.title == 'Districts' %}
                  <li>
                    <a href="{{ districts.url }}">{{ districts.title }}</a>
                  </li>
                  {% endunless %}
                  {% endif %}
                  {% endfor %}
                </ol>
              </li>
              <li>
                <a href="/locations/port-george/families/">Families</a>
                <ol class="list-group push-0 dropdown-block-items level-three">
                  {% for families in site.locations %}
                  {% if families.url contains 'families' %}
                  {% unless families.title == 'Families' %}
                  <li>
                    <a href="{{ families.url }}">{{ families.title }}</a>
                  </li>
                  {% endunless %}
                  {% endif %}
                  {% endfor %}
                </ol>
              </li>
            </ol>
          </li>
        </ol>
      </div>
      {% endunless %}
    </li>
    <li>
      <a href="/events">Events</a>
      {% unless include.navClass == 'nav-footer' %}
      <div class="dropdown-block">
        <ol class="list-group push-0 dropdown-block-items level-one">
          {% for events in site.events %}
          {% unless events.title == 'Events' %}
          <li>
            <a href="{{ events.url }}">{{ events.title }}</a>
          </li>
          {% endunless %}
          {% endfor %}
        </ol>
      </div>
      {% endunless %}
    </li>
    <li>
      <a href="/factions">Factions</a>
      {% unless include.navClass == 'nav-footer' %}
      <div class="dropdown-block">
        <ol class="list-group push-0 dropdown-block-items level-one">
          {% for factions in site.factions %}
          {% unless factions.title == 'Factions' %}
          <li>
            <a href="{{ factions.url }}">{{ factions.title }}</a>
          </li>
          {% endunless %}
          {% endfor %}
        </ol>
      </div>
      {% endunless %}
    </li>
  </ol>
</nav>
