{% for monster in site.data.monsters %}
  {% if ref == monster.monster %}
    {% include patterns/stat-block/stat-block.liquid
      title=monster.title
      mm-pg=monster.mm-pg
      desc=monster.desc
      ac=monster.ac
      hp=monster.hp
      speed=monster.speed
      str=monster.str
      dex=monster.dex
      con=monster.con
      int=monster.int
      wis=monster.wis
      cha=monster.cha
      skills=monster.skills
      senses=monster.senses
      languages=monster.languages
      cr=monster.cr
      abilities=monster.abilities
      actions=monster.actions
    %}
  {% endif %}
{% endfor %}
