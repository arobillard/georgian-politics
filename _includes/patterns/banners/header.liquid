<header class="banner-header" {% if include.img %}style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, .5)), url('{{site.baseurl}}{{include.img}}')"{% endif %}>
  <div class="banner-content wrapper island">
    <h1 class="push-0 text-fff tena">{{ include.headline }}</h1>
    {% if include.byline %}<p>{{ include.byline }}</p>{% endif %}
  </div>
</header>
