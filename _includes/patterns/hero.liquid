{% assign btnStyles = include.btnStyle | append: " mega" %}
<header class="hero" style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, .5)), url('{{include.img}}')">
  <div class="wrapper pad-t-2 pad-b-2 gutter">
    <div class="hero-content">
    {% if page.url == '/' %}
      <strong class="title exa font-secondary">{{ include.title}}</strong>
    {% else %}
      <h1 class="title push-0">{{ include.title}}</h1>
    {% endif %}
      <p class="byline">{{ include.byline }}</p>
    {% if include.btnURL %}
      {% include patterns/btn.liquid btnStyle=btnStyles btnURL=include.btnURL btnText=include.btnText %}
    {% endif %}
    </div>
  </div>
</header>
