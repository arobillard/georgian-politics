---
layout: content
title: Families
permalink: /families/
loopExclude: true
---

<section>
  <div class="wrapper pad-b pad">
    <div class="grid island-1-2">
      {% for family in site.families %}
      {% if family.loopExclude != true %}
      {% if family.discovered == true or site.data.view-controls.dm-view == true %}
      <div class="unit [ xs-1 m-1-2 l-1-3 ] island-1-2">
        {% include patterns/cards/preview-list-item.liquid title=family.title img=family.img url=family.url %}
      </div>
      {% endif %}
      {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
